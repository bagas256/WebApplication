<div class="container-fluid">
    @using System.Data;
    @using WebApplication.Library;

    @{
        string BaseURL = System.Configuration.ConfigurationManager.AppSettings["BaseURL"];
        DataRowCollection DataRole = (DataRowCollection)ViewData["DataRole"];
    }

    @using (Html.BeginForm("Create", "UserManagement", FormMethod.Post, new { Area = "Master" }))
    {

        <form method="post">
            <div class="card shadow mb-4">
                <!-- Card Header - Accordion -->
                <a href="#collapseCardExample" class="d-block card-header py-3" data-toggle="collapse"
                   role="button" aria-expanded="true" aria-controls="collapseCardExample">
                    <h6 class="m-0 font-weight-bold text-primary">Add User</h6>
                </a>
                <!-- Card Content - Collapse -->
                <input type="hidden" name="UserId" />
                <div class="collapse show" id="collapseCardExample">
                    <div class="card-body">
                        <div class="row">
                            <div class="col">
                                <label>First Name</label>
                                <input class="form-control" name="FirstName" />
                            </div>
                            <div class="col">
                                <label>Last Name</label>
                                <input class="form-control" name="LastName" />
                            </div>
                        </div>
                        <div class="form-group"></div>
                        <div class="row">
                            <div class="col">
                                <label>Email</label>
                                <input type="email" class="form-control" name="Email" />
                            </div>
                            <div class="col">
                                <label>Phone Number</label>
                                <input type="number" class="form-control" name="PhoneNumber" />
                            </div>
                            <div class="col">
                                <label>Role</label>
                                <select id="Role" class="form-control" name="Role">
                                    <option value="">Pilih Role</option>
                                    @foreach (DataRow ListRole in DataRole)
                                    {

                                        if (ListRole["RoleName"].ToString().Equals(ViewData["RoleName"]))
                                        {
                                            <option value="@ListRole["RoleId"]" selected>@ListRole["RoleName"]</option>
                                        }
                                        else
                                        {
                                            <option value="@ListRole["RoleId"]">@ListRole["RoleName"]</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    }
</div>

